#!/bin/bash

WORKSTATION_CONFIG_DIR=~/Documents/configuration/workstation
DOC_RECIPE_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if ! command -v zeal > /dev/null 2>&1; then
    shef apt zeal
fi

shef brew dasht

if [ ! -d "$HOME/.local/share/documentation" ]; then
    mkdir -p "$HOME/.local/share/documentation"
fi

cp --update "$DOC_RECIPE_DIR/files/Zeal.conf" "$HOME/.config/Zeal/Zeal.conf"

if [ ! -f  "$WORKSTATION_CONFIG_DIR/zsh/documentation.zsh" ]; then
    echo "export DASHT_DOCSETS_DIR=$HOME/.local/share/documentation/docsets" > "$WORKSTATION_CONFIG_DIR/zsh/documentation.zsh"
fi
